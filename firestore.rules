rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is faculty
    function isFaculty() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'faculty';
    }
    
    // Helper function to check if user is student
    function isStudent() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student';
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (for displaying names, etc.)
      allow read: if isAuthenticated();
      
      // Users can only create/update their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId;
      
      // No deletion allowed
      allow delete: if false;
    }
    
    // Reminders collection
    match /reminders/{reminderId} {
      // Faculty can create reminders
      allow create: if isFaculty();
      
      // Faculty can read their own reminders
      // Students can read reminders targeted to them
      allow read: if isAuthenticated() && (
        // Faculty can read their own reminders
        (isFaculty() && resource.data.createdBy == request.auth.uid) ||
        // Students can read reminders targeted to them
        (isStudent() && (
          resource.data.targetStudents.hasAny(['all']) ||
          resource.data.targetStudents.hasAny([request.auth.uid])
        ))
      );
      
      // Faculty can update/delete their own reminders
      allow update: if isFaculty() && resource.data.createdBy == request.auth.uid;
      allow delete: if isFaculty() && resource.data.createdBy == request.auth.uid;
      
      // Students can update reminders to mark them complete
      // (only the isCompleted and completedAt fields)
      allow update: if isStudent() && 
                       (resource.data.targetStudents.hasAny(['all']) ||
                        resource.data.targetStudents.hasAny([request.auth.uid])) &&
                       request.resource.data.diff(resource.data).affectedKeys()
                         .hasOnly(['isCompleted', 'completedAt']);
    }
    
    // Focus sessions collection
    match /focus_sessions/{sessionId} {
      // Users can create their own focus sessions
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Users can read their own focus sessions
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can update their own focus sessions
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can delete their own focus sessions
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
