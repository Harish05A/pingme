rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ⚠️ DEVELOPMENT ONLY - REPLACE WITH PRODUCTION RULES BEFORE LAUNCH
    // This allows all authenticated users to read/write everything
    // Use this ONLY for testing, then deploy the proper rules from firestore.rules
    
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
